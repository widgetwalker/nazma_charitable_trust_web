# ============================================
# Environment Variables Template
# ============================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ============================================
# SUPABASE
# ============================================
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Get these from: https://app.supabase.com/project/_/settings/api

# ============================================
# PAYMENT GATEWAY (Razorpay)
# ============================================
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# ============================================
# EMAIL SERVICE (Optional - for contact forms)
# ============================================
# Option 1: Supabase Edge Functions with Resend
RESEND_API_KEY=your_resend_api_key

# Option 2: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# Option 3: AWS SES
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1

# ============================================
# ANALYTICS
# ============================================
VITE_GA_MEASUREMENT_ID=your_google_analytics_id
VITE_FB_PIXEL_ID=your_facebook_pixel_id

# ============================================
# SITE CONFIGURATION
# ============================================
VITE_SITE_URL=http://localhost:5173
VITE_CONTACT_EMAIL=info@nazmatrust.org

# ============================================
# FEATURE FLAGS
# ============================================
VITE_ENABLE_DONATIONS=false
VITE_ENABLE_BLOG=false
VITE_ENABLE_NEWSLETTER=true
